{% extends "base.html.j2" %}
{% block app_content %}
    <div class="container">
        <div class="row">
            <div class="span6 pull-left">
                <h1 style="margin: 0; display: inline-block;">{{ _("Second Hand Type %(n)s", n= category.name) }}</h1>
            </div>
            <div class="span6 pull-right">
                <a href="{{ url_for("secondhand") }}"
                   class="btn btn-primary"
                   role="button">{{_("go back")}}</a>
            </div>
        </div>
    </div>
    <hr />
    {% for post in posts %}
        <div class="post">
            <h3>
                <a href="{{ url_for('view_secondhand_post', post_id=post.id) }}">{{ post.title }}</a>
            </h3>
            <img src="{{ post.images[0].path }}"
                 alt="{{ post.title }}"
                 class="img-responsive" />
            <p>
                by: <a href="{{ url_for('profile', username = post.seller.username) }}">{{ post.seller.display_name }}</a> @ {{ moment(post.issue_date).fromNow() }}
            </p>
        </div>
    {% endfor %}
    {% include "_pagination_button.html.j2" %}
{% endblock app_content %}
