{% extends "base.html.j2" %}
{% block app_content %}
  {% if form %}
    <h3>Hi, {{ current_user.display_name }}!</h3>
    {% import 'bootstrap/wtf.html' as wtf %}
    <div class="container">
      <div class="row">
        <div class="col-md-6">{{ wtf.quick_form(form) }}</div>
      </div>
    </div>
    <hr />
  {% endif %}
  {% if posts %}
    {% include "_post_table.html.j2" %}
    {% include "_pagination_button.html.j2" %}
  {% else %}
    {% if home %}
      <h5>{{ _("No posts yet.") }}</h5>
    {% else %}
      <h5>{{ _("No posts yet. Be the first to post!") }}</h5>
    {% endif %}
  {% endif %}
{% endblock app_content %}
