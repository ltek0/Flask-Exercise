{
  "name": "Python 3 & PostgreSQL",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  // "workspaceFolder": "/workspace",
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "flask --debug run --host=0.0.0.0"
  },
  "portsAttributes": {
    "5000": {
      "label": "Flask Apps",
      "protocol": "http"
    },
    "5050": {
      "label": "pgadmin"
    },
    "8025": {
      "label": "mailhog"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": ["templates/index.html"]
    },
    "vscode": {
      "settings": {
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "samuelcolvin.jinjahtml",
        "monosans.djlint",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "forwardPorts": [5000, 5050, 8025],
  "features": {
    "ghcr.io/devcontainers/features/docker-from-docker:1": {}
  }
}
