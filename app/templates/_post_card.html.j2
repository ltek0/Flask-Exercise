<tr>
    <td width="70px">
        <a href="{{ url_for('profile', username=post.author.username) }}">
            <img src="{{ post.author.avatar(70) }}"
                 alt="Author avatar"
                 width="70"
                 height="70" />
        </a>
    </td>
    <td>
        <p>
            <a href="{{ url_for('profile', username=post.author.username) }}">{{ post.author.display_name }}</a>: {{ post.title }}
            <br />
            {{ post.body }}
        </p>
    </td>
</tr>
