<table>
    <tr valign="top">
        <td>
            <img src="{{ post.author.avatar(36) }}"
                 alt="User Avatar"
                 height="36"
                 width="36" />
        </td>
        <td>
            <a href="{{ url_for('profile', username=post.author.username) }}">{{ post.author.display_name }}</a>: {{ post.title }}
            <br />
            {{ post.body }}
        </td>
    </tr>
</table>
