{% extends "base.html.j2" %}
{% block content %}
    <h1>Create Post</h1>
    <form action="" method="post">
        {{ form.hidden_tag() }}

      <p>
        {{ form.title.label }}<br />
        {{ form.title(size=32) }}<br />
        {% for error in form.title.errors %}
          <span style="color: red">[{{ error }}]</span>
        {% endfor %}
      </p>
      <p>
        {{ form.body.label }}<br />
        {{ form.body(cols=64,rows=4) }}<br />
        {% for error in form.body.errors %}
          <span style="color: red">[{{ error }}]</span>
        {% endfor %}
      </p>

      <p>{{ form.submit() }}</p>
      
    </form>
    
{% endblock %}
