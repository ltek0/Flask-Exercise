{% extends "base.html.j2" %}
{% block app_content %}
    <h1>Create Gallery Submission</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form method="post" class="form" enctype="multipart/form-data" role="form">
                    {{ form.hidden_tag() }}
                    <div class="form-group required">
                        <label class="control-label" for="title">{{ form.title.label }}</label>
                        {{ form.title(class="form-control") }}
                    </div>
                    <div class="form-group required">
                        <label class="form-label" for="validatedCustomFile">{{ form.images.label }}</label>
                        {{ form.images(class="form-control", multiple=True) }}
                    </div>
                    {{ form.submit(class="btn btn-primary") }}
                </form>
            </div>
        </div>
    </div>
{% endblock app_content %}
