{% extends "base.html.j2" %}
{% block content %}
    <style>
        #p-table {
            width: 100%;
            border-collapse: collapse;
        }
        #p-table td {
            border: 1px solid black;
            padding: 5px;
        }
    </style>
    <h1>Post</h1>
    <table id="p-table">
        <tr>
            <td colspan="2">
                <h2>{{ post.title }}</h2>
            </td>
        </tr>
        <tr>
            <td>Author</td>
            <td>
                <a href="{{ url_for('user', username=post.author.username) }}">{{ post.author.display_name }}</a>
            </td>
        </tr>
        <tr>
            <td>Last modified:</td>
            <td>{{ post.timestamp }}</td>
        </tr>
        <tr>
            <td colspan="2">{{ post.body }}</td>
        </tr>
        {% if current_user.id == post.author.id %}
            <tr>
                <td>Action:</td>
                <td>
                    <a href="{{ url_for('edit_post', post_id = post.id) }}">edit</a>
                    <a href="{{ url_for('delete_post', post_id = post.id) }}"><span style="color: red">delete</span></a>
                </td>
            </tr>
        {% endif %}
    </table>
{% endblock %}
