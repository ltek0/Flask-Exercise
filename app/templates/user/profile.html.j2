{% extends "base.html.j2" %}
{% block content %}
    <style>
    h1, p {
        margin: 0;
    }
    </style>
    <table>
        <tr valign="top">
            <td>
                <img src="{{ user.avatar(128) }}"
                     alt="User Avatar"
                     height="128"
                     width="128" />
            </td>
            <td>
                <h1>{{ user.display_name }}</h1>
                <p>username: {{ user.username }}</p>
                {% if user.about_me %}<p>{{ user.about_me }}</p>{% endif %}
                {% if user.last_seen %}<p>Last seen on: {{ user.last_seen }}</p>{% endif %}
                <p>followers: {{ user.followers.count() }}, following: {{ user.followed.count() }}</p>
                {% if current_user.is_authenticated %}
                    {% if user == current_user %}
                        <p>
                            <a href="{{ url_for("edit_profile") }}">Edit your profile</a>
                        </p>
                    {% endif %}
                    {% if user != current_user %}
                        {% if current_user.is_following(user) %}
                            <p>
                                <a href="{{ url_for('unfollow', username=user.username) }}">unfollow</a>
                            </p>
                        {% else %}
                            <p>
                                <a href="{{ url_for('follow', username=user.username) }}">follow</a>
                            </p>
                        {% endif %}
                    {% endif %}
                {% endif %}
            </td>
        </tr>
    </table>
    <hr />
    {% for post in posts %}
        {% include "_post_card.html.j2" %}
    {% endfor %}
    {% if prev_url %}<a href="{{ prev_url }}">Newer posts</a>{% endif %}
    {% if next_url %}<a href="{{ next_url }}">Older posts</a>{% endif %}
{% endblock content %}
